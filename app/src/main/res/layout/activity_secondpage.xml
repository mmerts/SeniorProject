<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SecondpageActivity">

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="120dp"
        android:layout_height="39dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#A249BA"


        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonmain"
        app:layout_constraintVertical_bias="0.54" />

    <Button
        android:id="@+id/buttonDate"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginBottom="332dp"

        android:background="@drawable/buttonshape"
        android:backgroundTint="#550263"
        android:clickable="false"
        android:text="Date"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonwithoutlogin"
        app:layout_constraintVertical_bias="1.0" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="173dp"
        android:layout_height="143dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/buttonselectcountry"
            android:layout_width="111dp"
            android:layout_height="29dp"

            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#550263"
            android:clickable="false"
            android:text="Select Country"
            android:textAllCaps="false" />

        <Spinner
            android:id="@+id/spinnercountry"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp" />


        <Button
            android:id="@+id/buttonselectcity"
            android:layout_width="111dp"
            android:layout_height="29dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#550263"
            android:clickable="false"
            android:text="Select City"
            android:textAllCaps="false" />



        <Spinner
            android:id="@+id/spinnercity"
            android:layout_width="100dp"
            android:layout_height="25dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/datetxt"
        android:layout_width="151dp"
        android:layout_height="47dp"
        android:textColor="#510C0C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="278dp"
        android:layout_height="55dp"
        android:fontFamily="sans-serif"
        android:text="Please Select your date of travel"
        android:textAlignment="viewStart"
        android:textColor="#932424"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

</androidx.constraintlayout.widget.ConstraintLayout>