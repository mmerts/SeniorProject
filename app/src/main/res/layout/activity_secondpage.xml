<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#000000"
    tools:context=".SecondpageActivity">

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="120dp"
        android:layout_height="39dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#A249BA"


        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonmain"
        app:layout_constraintVertical_bias="0.54" />

    <Button
        android:id="@+id/buttonDate"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginBottom="356dp"

        android:background="@drawable/buttonshape"
        android:backgroundTint="#550263"
        android:clickable="false"
        android:text="Date"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonwithoutlogin"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonselectcoutry"
        android:layout_width="111dp"
        android:layout_height="29dp"

        android:layout_marginBottom="68dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#550263"
        android:clickable="true"
        android:text="Country/City"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonwithoutlogin"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>