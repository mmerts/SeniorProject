<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="95dp"
        android:layout_height="43dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/buttonshape"
        android:contentDescription="@android:string/VideoView_error_button"
        android:text="Login"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/buttonwithoutlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonregister"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/buttonshape"
        android:text="Register"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonwithoutlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonlogin"
        app:layout_constraintVertical_bias="0.807" />

    <Button
        android:id="@+id/buttonwithoutlogin"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/buttonshape"
        android:text="Without Login"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonregister" />

    <Button
        android:id="@+id/buttonmain"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#550263"
        android:text="Lead The Way"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonwithoutlogin"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>